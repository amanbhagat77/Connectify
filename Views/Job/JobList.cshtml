
@{
    ViewBag.Title = "JobList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Job List</h2>

<table id="jobs" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Job Id</th>
            <th>Customer Name</th>
            <th>Mobile Number</th>
            <th>Address</th>
            <th>Product Type</th>
            <th>Job Type</th>
            <th>Status</th>
            <th>Description</th>
            <th>Action</th>
        </tr>
    </thead>
</table>

@section scripts
{
    <script>
        $(document).ready(function () {
            var table = $("#jobs").DataTable({
                ajax: {
                    url: "/api/jobs",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "id"
                    },
                    {
                        data: "customerName"
                    },
                    {
                        data: "phoneNumber"
                    },
                    {
                        data: "address"
                    },
                    {
                        data: "jobItem"
                    },
                    {
                        data: "jobType"
                    },
                    {
                        data: "status"
                    },
                    {
                        data: "description"
                    },
                    {
                        data: "id",
                        render: function (data) {
                            return "<button class = 'btn btn-link js-cancel' style='color:red' data-job-id=" + data + ">Cancel</button>"
                        }
                    }
                ]
            });

            $("#jobs").on("click", ".js-cancel", function () {
                var btnCancel = $(this);
                bootbox.confirm("Are you sure you want to cancel the job request?", function (result) {
                    if (result) {
                        $.ajax({
                            url: "/api/jobs/" + btnCancel.attr("data-job-id"),
                            method: "DELETE",
                            success: function () {
                                table.row(btnCancel.parents("tr")).remove().draw();
                            }

                        })
                    }
                })
            })
        })
    </script>    
}
